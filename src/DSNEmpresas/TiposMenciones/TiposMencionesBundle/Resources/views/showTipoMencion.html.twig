{% extends 'TemplateBundle::template.html.twig' %}

{% block title %}{{ tipomencion.getNroMenciones }}{% endblock %}

{% block content %}
{% if errors %}
    <div id="error">
    <h3>Posibles errores:</h3>
    <ul>
    {% for error in errors %}
        <li>{{ error.message }}</li>
    {% endfor %}
    </ul>
    </div>
{% endif %}
        
<form action="{{ path('showTipoMencion', {'id': tipomencion.getId, '_format': 'html' }) }}" method="post" {{ form_enctype(form) }}>        
    <table class="resp">
        <tr><th colspan="2"><h3>Edici√≥n de menciones</h3></th></tr>
            {% for form in form %}
                <tr style="height:32px;"><td>{{ form_label(form) }}</td><td>{{ form_widget(form) }}</td></tr>
            {% endfor %}
    </table>

    <hr>

    Los campos marcados con un asterisco <span id="required">(*)</span> son obligatorios. <br>  
    <input type="submit" value="aceptar"/>
    <input type="button" name="back" value="Cancelar" onclick="window.location='{{ path('showTiposMenciones') }}'" />
</form>

{% endblock %}