{% extends 'ListadosBundle::listados.html.twig' %}

{% block title %}Lista de facturas{% endblock %}

{% block entidad %}facturas{% endblock %}

{% block datos %}<td>Nro. factura</td><td>Nombre</td><td>Ciudad</td><td>Condici√≥n de vta.</td><td>Cantidad/es</td><td>Descripcion/es</td><td>Precio/s unitario/s</td><td>Total</td>{% endblock %}

{% block datos_lista %}
<td><input type="checkbox" name="link[]" value="{{ item.getId }}" id="{{ item.getId }}"></td>
<td>{{ item.getNFactura }}</td>
<td>{{ item.getNombre }}</td>
<td>{{ item.getIdCiudad.getNombre }}</td>
<td>{{ item.getCondicionVenta }}</td>
<td>{{ item.getCantidad }}</td>
<td>{{ item.getDescripcion }}</td>
<td>{{ item.getPUnitario }}</td>
<td>{{ item.getTotal }}</td>
{% endblock %}

{% block botones %}
<td><button name="nuevo" onclick="window.location='{{ path('insertFacturas') }}'" />Nuevo</button></td>
<td><button id="borrar">Borrar</button></td>
{% endblock %}

{% block mostrar %}
