{% extends 'TemplateBundle::template.html.twig' %}

{% block title %}{{ ciudad.getNombre }}{% endblock %}

{% block content %}
        
<form action="{{ path('showCiudad', {'id': ciudad.getId, 'nombre': ciudad.getNombre, '_format': 'html' }) }}" method="post" {{ form_enctype(form) }} >
    <table class="resp">
        <tr><th colspan="2"><h3>Edici√≥n de ciudades</h3></th></tr>
        {% for form in form %}
            <tr style="height:32px;"><td>{{ form_label(form) }}</td><td>{{ form_widget(form) }}</td></tr>
        {% endfor %}
    </table>

    <hr>

    Los campos marcados con un asterisco <span id="required">(*)</span> son obligatorios. <br>  
    <input type="submit" value="aceptar"/>
    <input type="button" name="back" value="Cancelar" onclick="window.location='{{ path('showCiudades') }}'" />
</form>

{% endblock %}
