{% extends 'TemplateBundle::template.html.twig' %}

{% block title %}Edición de comisiones{% endblock %}

{% block js %}
<script>
    function justNumbers(e) {
        var keynum = window.event ? window.event.keyCode : e.which;
        if ((keynum == 8) || (keynum == 44) || (keynum == 09))
            return true;

        return /\d/.test(String.fromCharCode(keynum));
    }
</script>
{% endblock %}

{% block content %}

<form action="{{ path('showComision', {'id': comision.getId, 'nombre': comision.getDescripcion, '_format': 'html'}) }}" method="post" {{ form_enctype(form) }}>

    <table class="resp">
        <tr><th colspan="2"><h3>Edición de comisiones</h3></th></tr>
        {% for form in form %}
            <tr style="height:32px;"><td>{{ form_label(form) }}</td><td>{{ form_widget(form) }}</td></tr>
        {% endfor %}
    </table>

    <hr>

    Los campos marcados con un asterisco <span id="required">(*)</span> son obligatorios. <br>  
    <input type="submit" value="aceptar"/>
    <button onclick="window.location='{{ path('showComisiones') }}'">Cancelar</button>
</form>

{% endblock %}