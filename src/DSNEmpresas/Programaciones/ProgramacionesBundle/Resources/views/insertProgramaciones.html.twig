{% extends 'TemplateBundle::template.html.twig' %}

{% block title %}Alta de programaciones{% endblock %}

{% block js %}
<script>
$(function() {
    $( document ).tooltip({
        track: true,
    });
});
</script>
{% endblock %}

{% block content %}

<form action="{{ path('insertProgramaciones') }}" method="post" {{ form_enctype(form) }}>

    <table class="resp">
        <tr><th colspan="2"><h3>Alta de programaciones</h3></th></tr>
        {% for form in form %}
            <tr style="height:32px;"><td>{{ form_label(form) }}</td><td>{{ form_widget(form) }}</td></tr>
        {% endfor %}
    </table>

    <hr>

    Los campos marcados con un asterisco <span id="required">(*)</span> son obligatorios. <br>  
    <input type="submit" value="aceptar"/>
    <input type="reset" value="cancelar" onclick="window.location='{{ path('showProgramaciones') }}'" />
</form>

{% endblock %}
