{% block content %}
<style>
	#required { color: red; }
</style>

{{ form_start(form) }}
<table>
	{% for form in form %}
		<tr><td>{{ form_label(form) }}</td><td>{{ form_widget(form) }}</td></tr>
	{% endfor %}
</table>

<hr>
	Los campos marcados con un asterisco <span id="required">(*)</span> son obligatorios
<input type="submit" value="Aceptar"/>
<input type="button" name="back" value="Cancelar" onclick="window.location='{{ path('showTarifas') }}'" />{{ form_end(form) }}
{% endblock %}
